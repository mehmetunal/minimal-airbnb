@{
    ViewData["Title"] = "İletişim";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold text-primary mb-3">İletişim</h1>
                <p class="lead text-muted">Bizimle iletişime geçin, size yardımcı olmaktan mutluluk duyarız</p>
            </div>

            <div class="row g-5">
                <!-- İletişim Bilgileri -->
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body p-4">
                            <h3 class="h4 mb-4">İletişim Bilgileri</h3>
                            
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                    <i class="bi bi-geo-alt text-primary"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Adres</h6>
                                    <p class="small text-muted mb-0">İstanbul, Türkiye</p>
                                </div>
                            </div>

                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                    <i class="bi bi-envelope text-primary"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">E-posta</h6>
                                    <p class="small text-muted mb-0">info@minimalairbnb.com</p>
                                </div>
                            </div>

                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                    <i class="bi bi-telephone text-primary"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Telefon</h6>
                                    <p class="small text-muted mb-0">+90 (212) 555 0123</p>
                                </div>
                            </div>

                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                    <i class="bi bi-clock text-primary"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Çalışma Saatleri</h6>
                                    <p class="small text-muted mb-0">Pazartesi - Cuma: 09:00 - 18:00</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- İletişim Formu -->
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-4">
                            <h3 class="h4 mb-4">Mesaj Gönderin</h3>
                            
                            <form id="contactForm">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="firstName" class="form-label">Ad *</label>
                                        <input type="text" class="form-control" id="firstName" name="firstName" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="lastName" class="form-label">Soyad *</label>
                                        <input type="text" class="form-control" id="lastName" name="lastName" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="email" class="form-label">E-posta *</label>
                                        <input type="email" class="form-control" id="email" name="email" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="phone" class="form-label">Telefon</label>
                                        <input type="tel" class="form-control" id="phone" name="phone">
                                    </div>
                                    <div class="col-12">
                                        <label for="subject" class="form-label">Konu *</label>
                                        <select class="form-select" id="subject" name="subject" required>
                                            <option value="">Konu seçiniz</option>
                                            <option value="genel">Genel Bilgi</option>
                                            <option value="teknik">Teknik Destek</option>
                                            <option value="oneri">Öneri/Şikayet</option>
                                            <option value="isbirligi">İş Birliği</option>
                                            <option value="diger">Diğer</option>
                                        </select>
                                    </div>
                                    <div class="col-12">
                                        <label for="message" class="form-label">Mesajınız *</label>
                                        <textarea class="form-control" id="message" name="message" rows="5" placeholder="Mesajınızı buraya yazın..." required></textarea>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="privacy" name="privacy" required>
                                            <label class="form-check-label" for="privacy">
                                                <a href="/Home/Privacy" class="text-decoration-none">Gizlilik Politikası</a>'nı okudum ve kabul ediyorum *
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <button type="submit" class="btn btn-primary btn-lg px-4">
                                            <i class="bi bi-send me-2"></i>Mesaj Gönder
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- SSS Bölümü -->
            <div class="row mt-5">
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-5">
                            <h2 class="h3 text-center mb-4">Sıkça Sorulan Sorular</h2>
                            
                            <div class="accordion" id="faqAccordion">
                                <div class="accordion-item border-0 mb-3">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button collapsed bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                            MinimalAirbnb nasıl çalışır?
                                        </button>
                                    </h2>
                                    <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                        <div class="accordion-body">
                                            MinimalAirbnb, ev sahiplerinin evlerini misafirlere kiralayabilecekleri güvenli bir platformdur. 
                                            Ev sahipleri evlerini listeler, misafirler ise istedikleri evi seçip rezervasyon yapabilirler.
                                        </div>
                                    </div>
                                </div>

                                <div class="accordion-item border-0 mb-3">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button collapsed bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                            Güvenlik nasıl sağlanıyor?
                                        </button>
                                    </h2>
                                    <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                        <div class="accordion-body">
                                            Tüm kullanıcılarımız kimlik doğrulamasından geçer ve değerlendirme sistemi ile güvenlik sağlanır. 
                                            Ayrıca 7/24 müşteri desteği hizmetimiz bulunmaktadır.
                                        </div>
                                    </div>
                                </div>

                                <div class="accordion-item border-0 mb-3">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button collapsed bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                            Ödeme nasıl yapılır?
                                        </button>
                                    </h2>
                                    <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                        <div class="accordion-body">
                                            Kredi kartı, banka kartı veya dijital cüzdan ile güvenli ödeme yapabilirsiniz. 
                                            Ödemeler rezervasyon onaylandıktan sonra ev sahibine aktarılır.
                                        </div>
                                    </div>
                                </div>

                                <div class="accordion-item border-0">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button collapsed bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                                            İptal politikası nedir?
                                        </button>
                                    </h2>
                                    <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                        <div class="accordion-body">
                                            Rezervasyon tarihinden 24 saat öncesine kadar ücretsiz iptal yapabilirsiniz. 
                                            Daha detaylı bilgi için iptal politikamızı inceleyebilirsiniz.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('contactForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Form verilerini al
    const formData = new FormData(this);
    const data = Object.fromEntries(formData);
    
    // Basit doğrulama
    if (!data.firstName || !data.lastName || !data.email || !data.subject || !data.message) {
        alert('Lütfen tüm zorunlu alanları doldurun.');
        return;
    }
    
    // Başarı mesajı göster
    alert('Mesajınız başarıyla gönderildi! En kısa sürede size dönüş yapacağız.');
    this.reset();
});
</script> 