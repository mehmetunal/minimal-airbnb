@model MinimalAirbnb.Application.Messages.DTOs.MessageDto
@{
    ViewData["Title"] = "Mesaj Sil";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="bi bi-trash me-2"></i>Mesaj Sil
        </h1>
        <div>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                <i class="bi bi-eye me-1"></i>Detaylar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-1"></i>Geri Dön
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Uyarı Kartı -->
            <div class="card border-danger shadow mb-4">
                <div class="card-header bg-danger text-white py-3">
                    <h6 class="m-0 font-weight-bold">
                        <i class="bi bi-exclamation-triangle me-2"></i>Dikkat!
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5><i class="bi bi-exclamation-triangle me-2"></i>Bu mesajı silmek istediğinizden emin misiniz?</h5>
                        <p class="mb-0">
                            Bu işlem geri alınamaz. Mesaj kalıcı olarak silinecektir.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Mesaj Bilgileri -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="bi bi-chat-dots me-2"></i>Silinecek Mesaj Bilgileri
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Mesaj ID:</dt>
                                <dd class="col-sm-8">@Model.Id</dd>

                                <dt class="col-sm-4">Gönderen:</dt>
                                <dd class="col-sm-8">@Model.SenderName</dd>

                                <dt class="col-sm-4">Gönderen E-posta:</dt>
                                <dd class="col-sm-8">@Model.SenderEmail</dd>

                                <dt class="col-sm-4">Alıcı:</dt>
                                <dd class="col-sm-8">@Model.ReceiverName</dd>

                                <dt class="col-sm-4">Alıcı E-posta:</dt>
                                <dd class="col-sm-8">@Model.ReceiverEmail</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Konu:</dt>
                                <dd class="col-sm-8">@Model.Subject</dd>

                                <dt class="col-sm-4">Oluşturulma:</dt>
                                <dd class="col-sm-8">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</dd>

                                <dt class="col-sm-4">Okundu:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsRead)
                                    {
                                        <span class="badge bg-success">Evet</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Hayır</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Arşivlendi:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsArchived)
                                    {
                                        <span class="badge bg-info">Evet</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Hayır</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Mesaj İçeriği -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="bi bi-chat-text me-2"></i>Mesaj İçeriği
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6>Konu:</h6>
                        <p class="mb-0">@Model.Subject</p>
                    </div>
                    <div class="mb-3">
                        <h6>İçerik:</h6>
                        <div class="border rounded p-3 bg-light">
                            @Html.Raw(Model.Content.Replace("\n", "<br>"))
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Gönderen Bilgileri -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="bi bi-person me-2"></i>Gönderen Bilgileri
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="avatar-sm me-3">
                            <i class="bi bi-person-circle fa-2x text-primary"></i>
                        </div>
                        <div>
                            <div class="fw-bold">@Model.SenderName</div>
                            <small class="text-muted">@Model.SenderEmail</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Alıcı Bilgileri -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="bi bi-person-badge me-2"></i>Alıcı Bilgileri
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="avatar-sm me-3">
                            <i class="bi bi-person-circle fa-2x text-success"></i>
                        </div>
                        <div>
                            <div class="fw-bold">@Model.ReceiverName</div>
                            <small class="text-muted">@Model.ReceiverEmail</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Mesaj İstatistikleri -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="bi bi-graph-up me-2"></i>Mesaj İstatistikleri
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="h4 text-primary">@Model.MessageCount</div>
                            <small class="text-muted">Toplam Mesaj</small>
                        </div>
                        <div class="col-6">
                            <div class="h4 text-success">@Model.UnreadCount</div>
                            <small class="text-muted">Okunmamış</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Silme Formu -->
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-danger">
                        <i class="bi bi-trash me-2"></i>Silme İşlemi
                    </h6>
                </div>
                <div class="card-body">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        
                        <div class="mb-3">
                            <label class="form-label">Silme Nedeni (Opsiyonel)</label>
                            <textarea name="reason" class="form-control" rows="3" placeholder="Silme nedenini belirtin..."></textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Bu mesajı silmek istediğinizden emin misiniz?')">
                                <i class="bi bi-trash me-1"></i>Evet, Sil
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i>İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 