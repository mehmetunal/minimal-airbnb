@model Maggsoft.Core.Model.Pagination.PagedList<MinimalAirbnb.Application.Reviews.DTOs.ReviewDto>
@{
    ViewData["Title"] = "Değerlendirmeler";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="bi bi-star-fill text-warning"></i>
                    Değerlendirmeler
                </h2>
                <a href="@Url.Action("Create", "Reviews")" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>
                    Yeni Değerlendirme
                </a>
            </div>

            <!-- Filtreler -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-4">
                            <label for="propertyId" class="form-label">Ev ID</label>
                            <input type="text" class="form-control" id="propertyId" name="PropertyId" 
                                   value="@Context.Request.Query["PropertyId"]" placeholder="Ev ID girin">
                        </div>
                        <div class="col-md-4">
                            <label for="userId" class="form-label">Kullanıcı ID</label>
                            <input type="text" class="form-control" id="userId" name="UserId" 
                                   value="@Context.Request.Query["UserId"]" placeholder="Kullanıcı ID girin">
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-outline-primary me-2">
                                <i class="bi bi-search"></i>
                                Filtrele
                            </button>
                            <a href="@Url.Action("Index", "Reviews")" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-clockwise"></i>
                                Temizle
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            @if (Model.Data.Any())
            {
                <!-- Değerlendirme Listesi -->
                <div class="row">
                    @foreach (var review in Model.Data)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div>
                                            <h6 class="card-title mb-1">@review.PropertyTitle</h6>
                                            <small class="text-muted">@review.GuestName</small>
                                        </div>
                                        <div class="text-end">
                                            <div class="d-flex align-items-center">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= review.Rating)
                                                    {
                                                        <i class="bi bi-star-fill text-warning me-1"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-star text-muted me-1"></i>
                                                    }
                                                }
                                            </div>
                                            <small class="text-muted">@review.Rating/5</small>
                                        </div>
                                    </div>
                                    
                                    <p class="card-text">@(review.Comment?.Length > 100 ? review.Comment.Substring(0, 100) + "..." : review.Comment)</p>
                                    
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="bi bi-calendar3"></i>
                                            @review.CreatedDate.ToString("dd.MM.yyyy")
                                        </small>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Details", "Reviews", new { id = review.Id })" 
                                               class="btn btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", "Reviews", new { id = review.Id })" 
                                               class="btn btn-outline-warning">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Sayfalama -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Değerlendirme sayfaları">
                        <ul class="pagination justify-content-center">
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", "Reviews", new { pageNumber = Model.PageIndex, pageSize = Model.PageSize })">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.PageIndex + 1 - 2); i <= Math.Min(Model.TotalPages, Model.PageIndex + 1 + 2); i++)
                            {
                                <li class="page-item @(i == Model.PageIndex + 1 ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", "Reviews", new { pageNumber = i, pageSize = Model.PageSize })">@i</a>
                                </li>
                            }

                            @if (Model.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", "Reviews", new { pageNumber = Model.PageIndex + 2, pageSize = Model.PageSize })">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }

                <!-- Toplam Bilgi -->
                <div class="text-center mt-3">
                    <small class="text-muted">
                        Toplam @Model.TotalCount değerlendirme, @Model.TotalPages sayfa
                    </small>
                </div>
            }
            else
            {
                <!-- Boş Durum -->
                <div class="text-center py-5">
                    <i class="bi bi-star display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">Henüz değerlendirme bulunmuyor</h4>
                    <p class="text-muted">İlk değerlendirmeyi siz yapın!</p>
                    <a href="@Url.Action("Create", "Reviews")" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i>
                        Değerlendirme Yap
                    </a>
                </div>
            }
        </div>
    </div>
</div> 