@model MinimalAirbnb.Application.Users.DTOs.UserDto
@{
    ViewData["Title"] = "Kullanıcı Detayı";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-person-circle"></i> Kullanıcı Detayı</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Düzenle
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Geri
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Kullanıcı Bilgileri</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Ad:</label>
                            <p class="form-control-plaintext">@Model.FirstName</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Soyad:</label>
                            <p class="form-control-plaintext">@Model.LastName</p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Email:</label>
                            <p class="form-control-plaintext">@Model.Email</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Telefon:</label>
                            <p class="form-control-plaintext">@Model.PhoneNumber</p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Kullanıcı Tipi:</label>
                            <p class="form-control-plaintext">
                                <span class="badge bg-@(Model.UserType == MinimalAirbnb.Domain.Enums.UserType.Host ? "success" : Model.UserType == MinimalAirbnb.Domain.Enums.UserType.Admin ? "danger" : "info")">
                                    @Model.UserType
                                </span>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Email Onayı:</label>
                            <p class="form-control-plaintext">
                                <span class="badge bg-@(Model.EmailConfirmed ? "success" : "warning")">
                                    @(Model.EmailConfirmed ? "Onaylı" : "Onay Bekliyor")
                                </span>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Cinsiyet:</label>
                            <p class="form-control-plaintext">@Model.Gender</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Doğum Tarihi:</label>
                            <p class="form-control-plaintext">@Model.DateOfBirth?.ToString("dd.MM.yyyy")</p>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Adres:</label>
                    <p class="form-control-plaintext">@Model.Address</p>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Şehir:</label>
                            <p class="form-control-plaintext">@Model.City</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Ülke:</label>
                            <p class="form-control-plaintext">@Model.Country</p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Kayıt Tarihi:</label>
                            <p class="form-control-plaintext">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Son Güncelleme:</label>
                            <p class="form-control-plaintext">@Model.UpdatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Hızlı İşlemler</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Kullanıcıyı Düzenle
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Kullanıcıyı Sil
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Listeye Dön
                    </a>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5 class="card-title mb-0">İstatistikler</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h4 class="text-primary">0</h4>
                            <small class="text-muted">Rezervasyon</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <h4 class="text-success">0</h4>
                        <small class="text-muted">Değerlendirme</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 